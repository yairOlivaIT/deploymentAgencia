extends ./layout/index

block contenido
    main.container.mt-5
        h1.text-center.mt-5 #{pagina}

        blockquote.text-center Lee sobre nuestros clientes y sus experiencias 
        include ./layout/bloque_testimonios
        
        .row 

            .col-md-12
                h2.d-block.w-100.text-center Agrega un Testimonio
                
                if(errores)
                    each error in errores
                        .alert.col.alert-danger.text-center #{error.mensaje}

            .row.justify-content-center.col
                .col-md-8
                    form(action="/testimoniales" method="POST")
                        .form-group
                            label(for="nombre") Nombre  
                            input#nombre(type="text",placeholder="Tu nombre", name="nombre",class="form-control",value= nombre)
                        .form-group
                            label(for="email") Email  
                            input#email(type="email",placeholder="Tu email", name="email",class="form-control",value= email)
                        .form-group
                            label(for="mensaje") Mensaje  
                            textarea#mensaje(name="mensaje",class="form-control",placeholder="Tu mensaje", cols="30", rows="5")= mensaje

                        input.btn.btn-success.btn-block(type="submit") 


        hr.mt-5